#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
    int arr[]={ 2, 7 , 8 , 1 , 4};
    int i , j , t,c=0;
    for(i=0; i<=4;i++)
    {
        for(j=i+1;j<=4;j++)
        {
            c++;
            if(arr[i]>arr[j])
            {
                c++;
                t=arr[i];
                arr[i]=arr[j];
                arr[j]=t;
            }
        }
    }
    for(i=0;i<=4;i++)
    {
        cout<<arr[i]<<endl;
    }
    cout<<"Total time = "<<c<<endl;
    getch();
    return(0);
}
